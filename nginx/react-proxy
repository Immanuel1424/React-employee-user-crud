server {
    listen 80;
    server_name _;

    # === USER API ===
    location /user/api/ {
        rewrite ^/user/api/(.*)$ /api/$1 break;
        proxy_pass http://localhost:6000/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    # === REDIRECT /user → /user/ to avoid 301/404 mismatch ===
    location = /user {
        return 301 /user/;
    }

    # === USER FRONTEND ===
    location /user/ {
        proxy_pass http://localhost:4000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # === EMPLOYEE API ===
    location /employee/api/ {
        rewrite ^/employee/api/(.*)$ /api/$1 break;
        proxy_pass http://localhost:5000/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    # === REDIRECT /employee → /employee/ ===
    location = /employee {
        return 301 /employee/;
    }

    # === EMPLOYEE FRONTEND ===
    location /employee/ {
        proxy_pass http://localhost:3000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

